<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yufeng.dao.GuaranteeRelationshipDao">

    <!--担保关系 -->
    <resultMap type="GuaranteeRelationshipInfo" id="GuaranteeRelationshipInfoMap">  
        <result column="id" property="id"/>  
        <result column="internal_code" property="internal_code"/>
        <result column="relate_user_internal_code" property="relate_user_internal_code"/>
        <result column="status" property="status"/>
        <result column="assure_money" property="assure_money"/>
        <result column="create_time" property="create_time"/>
        <result column="mod_time" property="mod_time"/>
    </resultMap> 
   
    <select id="getById" parameterType="String" resultMap="GuaranteeRelationshipInfoMap" >

        SELECT * FROM guarantee_relationship_info_table WHERE id=#{id} AND status=1

    </select>
    
    <select id="getByCode" parameterType="String" resultMap="GuaranteeRelationshipInfoMap" >

        SELECT * FROM guarantee_relationship_info_table WHERE internal_code=#{code} AND status=1

    </select>
    
    <select id="getByRelateCode" parameterType="String" resultMap="GuaranteeRelationshipInfoMap" >

        SELECT * FROM guarantee_relationship_info_table WHERE relate_user_internal_code=#{code} AND status=1

    </select>
    
    <select id="getByAllCode" parameterType="String" resultMap="GuaranteeRelationshipInfoMap" >

        SELECT * FROM guarantee_relationship_info_table WHERE internal_code=#{0} AND relate_user_internal_code=#{1}

    </select>
    
    <insert id="insert">

        INSERT ignore INTO guarantee_relationship_info_table(id,internal_code,relate_user_internal_code,assure_money,create_time)
        VALUES (#{id},#{internal_code},#{relate_user_internal_code},#{assure_money},#{create_time})

    </insert>
    
    
    
    <update id="update">
        
        UPDATE guarantee_relationship_info_table
        
        <set>  
        <if test="internal_code !=null">  
            internal_code = #{internal_code},  
        </if>
        <if test="relate_user_internal_code !=null">  
            relate_user_internal_code = #{relate_user_internal_code},  
        </if>
        <if test="status !=null">  
            status = #{status},  
        </if>
        <if test="assure_money !=null">  
            assure_money = #{assure_money},  
        </if>
        <if test="mod_time !=null">  
            mod_time = #{mod_time},  
        </if>
        </set>
        
        WHERE id = #{id}
        
    </update>
    
    <update id="deleteGuaranteeRelationship">
        
        UPDATE guarantee_relationship_info_table set status=0 WHERE id=#{id}
        
    </update>
    
   
    <!--担保关系历史记录 -->
    <insert id="insertHis">

        INSERT ignore INTO guarantee_relationship_info_his_table(id,internal_code,relate_user_internal_code,status,assure_money,create_time)
        VALUES (#{id},#{internal_code},#{relate_user_internal_code},#{status},#{assure_money},#{create_time})

    </insert>
    



</mapper>
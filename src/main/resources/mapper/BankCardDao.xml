<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yufeng.dao.BankCardDao">

    <resultMap type="UserBankCardInfo" id="UserBankCardInfoMap">  
        <result column="id" property="id"/> 
        <result column="internal_code" property="internal_code"/>
        <result column="bankCardNumber" property="bankCardNumber"/>
        <result column="bankCardType" property="bankCardType"/>
        <result column="expireTime" property="expireTime"/>
        <result column="transferAccount" property="transferAccount"/>
        <result column="bankCardState" property="bankCardState"/>
        <result column="foundTime" property="foundTime"/>
        <result column="updateTime" property="updateTime"/>
        <result column="info_status" property="info_status"/>
        <result column="delete_operator" property="delete_operator"/>
        
    </resultMap>

    <select id="getBankCardByCode" parameterType="String" resultMap="UserBankCardInfoMap" >

            SELECT * FROM bank_card_Info_table WHERE internal_code=#{code} AND info_status=1

    </select>
    
    <select id="getBankCardByID" parameterType="String" resultMap="UserBankCardInfoMap" >

            SELECT * FROM bank_card_Info_table WHERE id=#{id} AND info_status=1

    </select>
    
    <select id="getBankCardByBankCardNumber" parameterType="String" resultMap="UserBankCardInfoMap" >

            SELECT * FROM bank_card_Info_table WHERE bankCardNumber=#{bankCardNumber} AND info_status=1

    </select>

    <insert id="insertBankCard">

        INSERT ignore INTO bank_card_Info_table(internal_code,bankCardNumber,bankCardType,expireTime,transferAccount,bankCardState,foundTime,delete_operator)
        VALUES (#{internal_code},#{bankCardNumber},#{bankCardType},#{expireTime},#{transferAccount},#{bankCardState},#{foundTime},#{delete_operator})

    </insert>

    <update id="updateBankCard">
        UPDATE bank_card_Info_table
        
        <set>  
        <if test="internal_code !=null">  
            internal_code = #{internal_code},  
        </if>
        <if test="bankCardNumber !=null">  
            bankCardNumber = #{bankCardNumber},  
        </if>
        <if test="bankCardType !=null">  
            bankCardType = #{bankCardType},  
        </if>
        <if test="expireTime !=null">  
            expireTime = #{expireTime},  
        </if>
        <if test="transferAccount !=null">  
            transferAccount = #{transferAccount},  
        </if>
        <if test="bankCardState !=null">  
            bankCardState = #{bankCardState},  
        </if>
        <if test="updateTime !=null">  
            updateTime = #{updateTime},  
        </if>
        </set>
        
        WHERE id = #{id}
    </update>
    
    <delete id="deleteBankCard">
<!--         DELETE FROM bank_card_Info_table WHERE id = #{id} -->
        UPDATE bank_card_Info_table
        
        <set>  
        info_status=0,
        <if test="delete_operator !=null">  
            delete_operator = #{delete_operator},  
        </if>
        </set>
        
        WHERE id = #{id}
    </delete>




</mapper>